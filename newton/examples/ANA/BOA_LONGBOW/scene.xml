<mujoco model="scene">

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0" />
        <rgba haze="0.15 0.25 0.35 1" />
        <global offwidth="2560" offheight="1440" elevation="-5" azimuth="-120"/>
    </visual>

    <asset>
        <!-- Sky materials -->
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072" />

        <!-- Ground Materials  -->
        <texture type="2d" name="groundplane" 
            builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" 
            markrgb="0.8 0.8 0.8" width="300" height="300" />
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
            reflectance="0.001"/>
    </asset>


    <worldbody>
        <!-- Light -->
        <light pos="0 0 3.5" dir="0 0 -1" directional="true" />

        <!-- Ground -->
        <geom name="ground" size="0 0 0.1" pos="0 0 0" type="plane" 
            material="groundplane" contype="1" conaffinity="3" group="0"/>
    </worldbody>


    <worldbody>

        <body name="boa_implement_vehicle" pos="0 0 0.10" quat="1 0 0 0">
            <freejoint name="vehicle_freejoint"/>
            <frame name="forklift_frame" pos="0 0 0" quat="1 0 0 0"/>
        </body>

    </worldbody>


</mujoco>
